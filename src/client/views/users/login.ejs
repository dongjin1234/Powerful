<%-include('../components/header.ejs') %>
  <script src="/client/js/login.js" defer></script>
</head>
<body>
  <div class="login-container">
    <p class="title theme-font"><i class="fa-solid fa-arrow-left"></i>로그인</p>
    <div class="form-container sign-in-container">
      <form id="loginForm" class="login-form">
        <label for="id">ID</label>
        <input id="id" name="id" type="text" placeholder="아이디" />
        <label for="pw">PW</label>
        <input id="pw" name="pw" type="password" placeholder="비밀번호" />
        <div class="login-btn">Login In</div>
        <div id="sns-login">
          <div id="sns-login-title">
            <p>회원이 아니시라면?</p>
            <h5>SNS로 바로 시작하기</h5>
          </div>
          <div class="sns-login-img">
            <a href="#">
              <img src="/file/naver_logo.svg" alt="">
            </a>
            <a href="#">
              <img src="/file/kakao_login.svg" alt="">
            </a>
            <a href="#">
              <img src="/file/google_logo.svg" alt="">
            </a>
          </div>
        </div>
        <div id="join-btn">
          <a href="/users/join">이메일로 회원가입하기</a>
        </div>
      </form>
      
    </div>
    
  </div>
</body>
</html>